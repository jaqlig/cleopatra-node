extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First name:
      input#first_name.form-control(type='text' name='first_name' required='true' value=(undefined===item ? '' : hairdresser.first_name))
    div.form-group
      label(for='last_name') Last name:
      input#last_name.form-control(type='text' name='last_name' required='true' value=(undefined===item ? '' : item.last_name))
    div.form-group
      label(for='birth') Date of birth:
      input#birth.form-control(type='date' name='birth' required='true' value=(undefined===item ? '' : item.birth))
    div.form-group
      label(for='phone_number') Phone number:
      input#phone_number.form-control(type='text' name='phone_number' required='true' value=(undefined===item ? '' : item.phone_number))
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email' name='email' required='true' value=(undefined===item ? '' : item.email))
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password' name='password' required='true' value=(undefined===item ? '' : item.password))
    div.form-group
      label(for='passwordConfirmation') Confirm password:
      input#passwordConfirmation.form-control(type='password' name='passwordConfirmation' required='true' value=(undefined===item ? '' : item.passwordConfirmation))

    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg